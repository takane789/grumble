<%= form_for(@mutter, url: choose_new_or_edit) do |f| %>
<% if @mutter.errors.any? %>
  <div id="error_explanation">
    <h2><%= @mutter.errors.count %>件のエラーがあります。</h2>

    <ul>
    <% @mutter.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= f.label :内容 %>
<%= f.text_field :content, class: 'form-control' %>
<br>
<%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to "一覧画面にもどる", mutters_path %>
